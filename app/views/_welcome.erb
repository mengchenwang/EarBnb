<div class="top_box">
  <% if current_user %>
    <div class="top_left">
      <img class="logo" src="/earbnb/logo.png">
    </div>

    <div class="top_center">
      Welcome, <b><%= current_user.first_name %>&nbsp;<%= current_user.last_name %></b>
      <form method='post' action='/sessions'>
        <input type='hidden' name='_method' value='delete'>
        <input type='submit' value='Sign out' class='btn btn-default'>
      </form>
    </div>

    <div class="top_right">
      <form action='/properties/new'>
        <input type='submit' value='Make new listing' class='btn btn-default'>
      </form>
    </div>
  <% else %>
    <div class="top_left">
      <img class="logo" src="/earbnb/logo.png">
    </div>

    <div class="top_center">
      New to EarBnb?
      <form action='/users/new'>
        <input type='submit' value='Create an account' class='btn btn-default'>
      </form>
    </div>

    <div class="top_right">
      Have an account?
      <form action='/sessions/new'>
        <input type='submit' value='Log in' class='btn btn-default'>
      </form>
    </div>
  <% end %>
</div>
