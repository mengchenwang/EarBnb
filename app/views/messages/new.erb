<style>
  .box {
    width:400px;
    border-radius:5px;
    padding: 20px 20px 20px 50px;
    box-shadow: -5px 5px 5px rgba(0,0,0,0.5);
    margin:20px auto auto auto;
    display:block;
    background-color:LightGray;
  }

  div {
    padding:5px;
  }

  label {
    display:block;
  }

  textarea {
    min-height:100px;
    resize: none;
  }

  input, textarea {
    min-width:280px;
  }

  input[type="submit"] {
    -webkit-appearance:button;
    padding:5px;
  }
</style>

<h1> Send a message to <%= user_name(other_user(@conversation)) %></h1>

<form class="box" action="/conversation/<%= @conversation.id %>/submit_message" method="POST" enctype="multipart/form-data">

  <div>
    <label for="content">Enter your message:</label>
    <textarea id ="content" name="content"></textarea>
  </div>

  <div>
    <input type="submit" value="Send" class="btn btn-default">
  </div>
</form>
